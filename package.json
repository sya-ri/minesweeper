{
  "name": "minesweeper",
  "version": "0.1.0",
  "repository": "https://github.com/sya-ri/minesweeper.git",
  "author": "sya-ri",
  "license": "MIT",
  "scripts": {
    "setup": "yarn core && yarn core:build && yarn analytics && yarn web",
    "lint": "yarn core:lint && yarn analytics:lint && yarn web:lint",
    "lint-fix": "yarn core:lint-fix && yarn analytics:lint-fix && yarn web:lint-fix",
    "test": "yarn core:test",
    "core": "yarn --cwd packages/core",
    "core:build": "yarn core build",
    "core:test": "yarn core test",
    "core:lint": "yarn core lint",
    "core:lint-fix": "yarn core lint-fix",
    "analytics": "yarn --cwd packages/analytics",
    "analytics:start": "yarn analytics start",
    "analytics:lint": "yarn analytics lint",
    "analytics:lint-fix": "yarn analytics lint-fix",
    "web": "yarn --cwd packages/web",
    "web:dev": "yarn web dev",
    "web:build": "yarn web build",
    "web:preview": "yarn web preview",
    "web:lint": "yarn web lint",
    "web:lint-fix": "yarn web lint-fix"
  }
}
